{
  "manifest_version": 3,
  "name": "PowerSwitch",
  "version": "2024.8.26",
  "description": "Switch tabs by typing",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "tabs",
    "system.display"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PowerSwitch"
  },
  "commands": {
    "switch_tab": {
      "suggested_key": {
        "default": "Ctrl+K"
      },
      "description": "Bring up the tab switcher"
    }
  }
}